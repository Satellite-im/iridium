{
  "name": "@satellite-im/iridium",
  "description": "TypeScript implementation of the Satellite.im Iridium Storage & Messaging Protocol",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test": "ava",
    "lint": "eslint",
    "prepare": "pnpm build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/iridium.esm.js",
  "size-limit": [
    {
      "path": "dist/iridium.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/iridium.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@libp2p/crypto": "^0.22.14",
    "@libp2p/peer-id": "^1.1.10",
    "@libp2p/peer-id-factory": "^1.0.11",
    "@noble/ed25519": "^1.6.0",
    "dag-jose": "^2.0.0",
    "dag-jose-utils": "^2.0.0",
    "did-jwt": "^6.1.0",
    "dids": "^3.2.0",
    "events": "^3.3.0",
    "ipfs-core": "^0.15.1",
    "key-did-provider-ed25519": "^2.0.0",
    "key-did-resolver": "^2.0.4",
    "merge": "^2.1.1",
    "multiformats": "^9.6.3"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/node": "^17.0.40",
    "ava": "^4.3.0",
    "husky": "^8.0.1",
    "size-limit": "^7.0.8",
    "ts-lib": "^0.0.5",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "tsup": "^6.1.0",
    "typescript": "^4.7.3"
  },
  "volta": {
    "node": "16.15.1"
  }
}